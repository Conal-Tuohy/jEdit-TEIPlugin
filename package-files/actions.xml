<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>	
	<ACTION NAME="tei.update-tei-package">
		<CODE>
			org.tei_c.jedit.teiplugin.TEI.getInstance().updateTEIPackage(true);
		</CODE>
	</ACTION>
	<ACTION NAME="tei.new-buffer-from-template">
		<CODE>
			wm.addDockableWindow(org.tei_c.jedit.teiplugin.TEIPlugin.NAME);
			wm.getDockableWindow(org.tei_c.jedit.teiplugin.TEIPlugin.NAME).getToolPanel().getComponent("tei.new-buffer-from-template").doClick();
		</CODE>
	</ACTION>
</ACTIONS>

